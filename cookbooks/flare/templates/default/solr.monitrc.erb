check process solr_<%= @app_name %>
  with pidfile /data/<%= @app_name %>/shared/pids/flare-solr.pid
  start program = "/bin/su -c 'RAILS_ENV=<%= @framework_env %> /usr/bin/rake -f /data/fave/current/Rakefile flare:solr:start' - <%= @user %>"
  stop program = "/bin/su -c 'RAILS_ENV=<%= @framework_env %> /usr/bin/rake -f /data/fave/current/Rakefile flare:solr:stop' - <%= @user %>"
  group solr_<%= @app_name %>
